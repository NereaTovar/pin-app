{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "firebase-admin"], 
    "lib": ["ES2017", "ES2020"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
